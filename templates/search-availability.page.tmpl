{{template "base" .}}
{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-5">
                <h1 class="mt-4">Search for availability</h1>
                <form action="/search-availability" method="post" class="needs-validation" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-row" id="reservation-dates">
                        <div class="col">
                            <input required class="form-control" type="text" name="start" autocomplete="off"
                                   placeholder="Arrival">
                        </div>
                        <div class="col">
                            <input required class="form-control" type="text" name="end" autocomplete="off"
                                   placeholder="Departure">
                        </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Search availabilityâ€¦</button>
                </form>
            </div>
        </div>
    </div>

{{/*    <button id="testBtn" class="btn btn-outline-secondary">test click</button>*/}}
{{end}}

{{define "js"}}
    <script>
        const elem = document.getElementById('reservation-dates');
        const rangepicker = new DateRangePicker(elem, {
            format: 'yyyy-mm-dd',
        });
    </script>
{{end}}